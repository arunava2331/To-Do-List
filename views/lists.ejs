<%- include("header.ejs") -%> 

<body>
    <h1 class = "box" id = "heading">Today is <%= kindOfTodo %>!</h1>

    <div class = "box">
                <% for(var i=0;i < newListItem.length;i++){ %>

                    <div class = "item">
                        <input type="checkbox">
                        <p><%= newListItem[i] %></p>
                    </div>
                <%} %>

                <form action="/" method = "post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" >+</button>
                </form>
            
    </div>
</body>

